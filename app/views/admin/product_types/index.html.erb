<p id="notice"><%= notice %></p>

<h1>Product Types</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Slug</th>
      <th>Numbers</th>
      <th colspan="4">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @product_types.each do |product_type| %>
      <tr>
        <td><%= product_type.name %></td>
        <td><%= product_type.slug %></td>
        <td><%= product_type.numbers %></td>
        <td><%= link_to 'Show', [:admin, product_type] %></td>
        <td><%= link_to 'Edit', edit_admin_product_type_path(product_type) %></td>
        <td><%= link_to 'Destroy', [:admin, product_type], method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to "Go to #{product_type.name} page ->", admin_products_path(product_type_slug: product_type.slug) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

